<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoiCauHoi"
    android:background="#B8B0E3"
    >

  <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Select question field"
      android:textSize="30dp"
      android:textColor="#120026"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="100dp"

    />

  <Button
      android:id="@+id/btnEducation"
      android:layout_width="125dp"
      android:layout_height="50dp"
      app:layout_constraintTop_toBottomOf="@+id/tvTitle"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="100dp"
      android:text="Education"
      android:background="#333159"
/>
  <Button
      android:id="@+id/btnGame"
      android:layout_width="125dp"
      android:layout_height="50dp"
      app:layout_constraintTop_toBottomOf="@+id/btnEducation"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="60dp"
      android:text="Game"

      />

  <Button
      android:id="@+id/btnSport"
      android:layout_width="125dp"
      android:layout_height="50dp"
      app:layout_constraintTop_toBottomOf="@+id/btnGame"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="60dp"
      android:text="Sport"
      />

  <Button
      android:id="@+id/btnNext"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:text="Next"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnSport"
      android:layout_marginTop="60dp"
    />
  </androidx.constraintlayout.widget.ConstraintLayout>